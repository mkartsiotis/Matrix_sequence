{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C: gcc build active file (strict C17)",
            "command": "C://Users//evaka//mingw64//bin//gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c17",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wpedantic",
                "-Wshadow",
                "-Wconversion",
                "-Wstrict-prototypes",
                "-Wmissing-prototypes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Strict C17 build â€“ identical to university/Codeforces"
        }
    ]
}